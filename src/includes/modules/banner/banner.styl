.banner
    padding 53px 120px 53px 50px
    width 100%
    display flex
    justify-content space-between
    align-items center
    background $primary-bg url(../img/svg/bg-vector.svg) no-repeat center
    box-sizing border-box

    @media(max-width 1023px)
        margin-right 40px
        padding 50px
        width calc(100% - 40px)
        flex-direction column

    @media(max-width 767px)
        margin-right 20px
        padding 30px 20px
        width calc(100% - 20px)

    .btn
        width 170px
        flex-shrink 0

    &__text
        max-width 705px
        width 64%
        line-height 140%
        font-size 28px
        font-weight 500
        color $primary-title
        letter-spacing .02px

        @media(max-width 1023px)
            margin-bottom 24px
            max-width 100%
            width 100%
            font-size 20px
            text-align center