.nativejs-select
    margin-top 16px
    width 100%
    height 48px
    position relative
    cursor pointer

    &__placeholder
    &__option
        font-family 'Montserrat', sans-serif
        font-size 14px
        cursor pointer
        border none
        outline none
        text-align left

    &__placeholder
        padding 0 52px 0 16px
        width 100%
        height 100%
        display flex
        align-items center
        color $black
        position relative
        border-radius 8px
        background-color $grey
        box-sizing border-box

        &:after
            content ''
            margin-top -2px
            width 8px
            height 8px
            display block
            position absolute
            right 20px
            top 50%
            border-bottom 1px solid $black
            border-right 1px solid $black
            transform translateY(-50%) rotate(45deg)

        &_fixed
            padding-right 5px
            color #7ca95c

        &-value
            display flex
            align-items center

    &__dropdown
        margin 0
        padding 0
        width 100%
        display none
        position absolute
        left 0
        bottom -10px
        z-index 5
        border-radius 8px
        background $grey
        transform translateY(100%)

    &__options
        padding 8px 0

    &__option
        padding 9px 16px
        width 100%
        color $black
        display flex
        align-items center
        background none
        border-bottom 1px solid transparent

        img
            margin-right 10px

        &:hover
            background-color $grey-lighter

    &_active
        .nativejs-select__placeholder:after
            margin-top 3px
            transform translateY(-50%) rotate(-135deg)

        .nativejs-select__dropdown
            display block

    &__search
        padding 5px

        &-inp
            box-sizing border-box
            width 100%
            height 30px