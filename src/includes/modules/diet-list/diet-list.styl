.diet-list
    margin-top 80px
    width 100%
    background $primary-bg url(../img/svg/bg-vector.svg) no-repeat center

    @media(max-width 767px)
        background $primary-bg

    .swiper-pagination-bullet
        background none
        border 1px solid $red

    &__item
        padding 40px 80px 32px
        width 100%
        box-sizing border-box

        @media(max-width 559px)
            padding 40px 30px 32px

        h4
            margin-bottom 15px
            line-height 200%
            font-size 14px
            text-transform uppercase

        ul
            width 100%
            display flex
            flex-wrap wrap

            @media(max-width 1139px)
                flex-direction column

            @media(max-width 767px)
                flex-direction row

            @media(max-width 559px)
                flex-direction column

        li
            width 50%
            display flex
            align-items center

            img
                width 20px
                flex-shrink 0

            span
                margin-left 16px
                line-height 250%
                font-size 18px
                font-weight 500
                white-space nowrap

