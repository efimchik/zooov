.nav-list
    width 100%

    @media(max-width 767px)
        width 26px
        height 20px
        margin-top (-@height / 2)
        position absolute
        top 50%
        right 20px
        border-top 2px solid $white
        border-bottom 2px solid $white
        cursor pointer
        transition border-color 300ms 300ms ease

        &:before
        &:after
            content ''
            width 100%
            height 2px
            margin-top (-@height / 2)
            position absolute
            top 50%
            background-color $burger-lines-bg
            transition background 300ms 300ms ease

    &--show
        border 0

        &:before
            @media(max-width 767px)
                transform rotate(45deg)

        &:after
            @media(max-width 767px)
                transform rotate(-45deg)

        .nav-list__box
            right 0
            transition right 300ms 300ms ease

    &__box
        width 100%
        display flex
        justify-content flex-end
        box-sizing border-box

        @media(max-width 767px)
            max-width 375px
            padding-top 80px
            padding-bottom 30px
            flex-direction column
            justify-content flex-start
            position fixed
            top 90px
            right (-@max-width)
            bottom 0
            overflow-y auto
            background-color $menu-mobile-bg
            transition right 300ms ease

    &__item
        margin-left 53px

        @media(max-width 1023px)
            margin-left 25px

        @media(max-width 767px)
            margin-left 0
            text-align center

            &:first-child
                .nav-list__link
                    margin-top 0

    &__link
        display block
        color $menu-link-secondary
        font-weight 500
        text-decoration none
        white-space nowrap
        border-bottom 1px solid transparent
        transition color 300ms 300ms ease

        @media(max-width 767px)
            margin-top 40px
            font-size 24px
            color $menu-link

        &:hover
            border-bottom 1px solid $secondary-bg