.popup
    &__order
        max-width 872px

        h4
            margin-bottom 4px
            font-size 20px

        .field-line
            @media(max-width 1023px)
                flex-direction row
                align-items center

            &--count
                margin-top 16px

                label
                    @media(max-width 767px)
                        display none

        .popup
            &__dialog
                padding 56px 52px
                display flex
                justify-content space-between

                @media(max-width 630px)
                    padding 56px 24px 24px
                    flex-direction column

            &__column
                width calc(50% - 22px)
                overflow hidden

                @media(max-width 630px)
                    width 100%

                &:first-child
                    @media(max-width 630px)
                        margin-bottom 30px

            &__desc
                margin-bottom 16px

        .field-line
            &__checkbox
                margin 30px 0 36px

    &__price
        margin-right 10px
        line-height 130%
        font-size 20px
        font-weight 500
        letter-spacing .02em