.field
    &__text
        padding 8px 15px
        width 100%
        height 122px
        font-family 'Montserrat', sans-serif
        line-height 140%
        font-size 14px
        color $secondary-color
        border 1px solid rgba($fields-primary-bg, .5)
        background-color rgba($fields-primary-bg, .05)
        border-radius 8px
        box-sizing border-box

        &::-webkit-input-placeholder
            color #c88684

        &::-moz-placeholder
            color #c88684

        &:-moz-placeholder
            color #c88684

        &:-ms-input-placeholder
            color #c88684

        &:focus::-webkit-input-placeholder
            color transparent

        &:focus::-moz-placeholder
            color transparent

        &:focus:-moz-placeholder
            color transparent

        &:focus:-ms-input-placeholder
            color transparent