.field
    padding 22px 12px 6px
    width 100%
    height 100%
    display block
    font-family 'Montserrat', sans-serif
    line-height 140%
    font-size 14px
    color $secondary-color
    border 0
    background none
    box-sizing border-box

    &__label
        margin-top -10px
        display block
        position absolute
        left 12px
        top 50%
        line-height 20px
        font-size 14px
        color $secondary-color
        opacity .6
        tr()

    &:focus + label
    &:not(:placeholder-shown) + label
        margin 0
        top 4px
        font-size 12px