.field
    &__checkbox
        position absolute
        top 0
        left 0
        appearance none

        &:checked + label:after
            opacity 1

        &-label
            padding-left 24px
            display block
            line-height 140%
            font-size 12px
            position relative
            cursor pointer

            &:before
            &:after
                content ''
                position absolute

            &:before
                width 16px
                height 16px
                top 0
                left 0
                border-radius 2px
                background-color $fields-primary-bg
                box-sizing border-box

            &:after
                width 10px
                height 8px
                top 4px
                left 3px
                background url(../img/svg/icn-check.svg) no-repeat center
                opacity 0