.step-list
    margin-top 60px
    width 100%
    display flex
    flex-wrap wrap
    justify-content space-between

    @media(max-width 767px)
        margin-top 50px

    &__item
        width calc((100% - 90px) /4)
        position relative

        @media(max-width 1023px)
            margin-bottom 40px
            width calc((100% - 40px) /2)

        @media(max-width 550px)
            width 100%

    &__icn
        margin-bottom 16px
        width 40px

    &__text
        color $menu-link

        span
            color $red
            border-bottom 1px solid $red
            cursor pointer
            tr()

            &:hover
                border-bottom 1px solid transparent

    &__title
        margin-bottom 8px
        line-height 130%
        font-size 18px
        font-weight 600
